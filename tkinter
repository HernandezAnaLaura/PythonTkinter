import tkinter as tk 
def saludar(): 
    name = entrada_name.get() 
    a単os = entrada_a単os.get()
    etiqueta_resultado.config(text=f"Hola {name},tienes{a単os} a単os, GRACIAS") 
ventana = tk.Tk() 
ventana.title("tercer version") 
ventana.geometry("450x300") 

etiqueta = tk.Label(ventana, text="Por favor ingrese su edad:") 
etiqueta.pack() 

entrada = tk.Entry(ventana) 
entrada.pack() 

boton = tk.Button(ventana, text="ver el saludo", command=saludar) 
boton.pack() 

etiqueta_resultado = tk.Label(ventana, text="") 
etiqueta_resultado.pack() 

ventana.mainloop()
