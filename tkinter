import tkinter as tk 
def saludar(): 
    años = entrada_años.get() 
    etiqueta_resultado.config(text=f"Hola, que tal {nombre},tienes{edad} años, GRACIAS") 
ventana = tk.Tk() 
ventana.title("version ana") 
ventana.geometry("450x200") 

etiqueta = tk.Label(ventana, text="Por favor ingresa tu nombre:") 
etiqueta.pack() 

entrada = tk.Entry(ventana) 
entrada.pack() 

boton = tk.Button(ventana, text="ver el saludo", command=saludar) 
boton.pack() 

etiqueta_resultado = tk.Label(ventana, text="") 
etiqueta_resultado.pack() 

ventana.mainloop()
